<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <color name="mainColor">#ff00bf71</color>
    <!-- <color name="white">#ffffffff</color>
    <color name="gray">#ffcccccc</color> -->

    <style name="public_title">
        <item name="android:textColor">@color/mainColor</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="order_list_selected">
        <item name="android:paddingLeft">15dip</item>
        <item name="android:paddingRight">15dip</item>
        <item name="android:paddingTop">8dip</item>
        <item name="android:paddingBottom">8dip</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/orderlist_title_bkg</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    
    <style name="order_list_unselected" parent="order_list_selected">
        <item name="android:background">@drawable/orderlist_title_bkg2</item>
        <item name="android:textColor">@color/mainColor</item>
    </style>
    
    <style name="order_list_unselected_mid" parent="order_list_unselected">
        <item name="android:background">@drawable/orderlist_title_bkg6</item>
        <item name="android:textColor">@color/mainColor</item>
    </style>
    <style name="order_list_selected_mid" parent="order_list_selected">
        <item name="android:background">@drawable/orderlist_title_bkg5</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>